<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Models.MapActivity"
>


    <Spinner
        android:id="@+id/sp_type"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="13dp"
        android:layout_weight="1"
        android:background="@drawable/edittextstyle"
        app:layout_constraintBottom_toTopOf="@+id/google_map"
        app:layout_constraintEnd_toStartOf="@+id/bt_find"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Spinner>

    <Button
        android:id="@+id/bt_find"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="#E15F8B"
        android:onClick="findButtonClicked"
        android:text="Find"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/google_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sp_type"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <fragment
        android:id="@+id/google_map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="397dp"
        android:layout_height="535dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_find">
        //android:name="com.google.andoroid.gms.maps.SupportMapFragment">

    </fragment>






</androidx.constraintlayout.widget.ConstraintLayout>